<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!--<link rel="stylesheet" href="/assets/css/custom.css">-->
    <title><%= title %></title>
</head>
<style>
    .table-wrapper {
        margin-top: 50px;
    }

    .player-img {
        width: 40px;
        height: 40px;
    }

    .add-player-form {
        margin-top: 50px;
    }
</style>
<body>
<div class="page-wrapper">
   

    <div class="table-wrapper">
        <% if (transactions.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Description</th>
                        <th scope="col">Merchant</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Category</th>
                        <th scope="col">UserId</th>
                       
                    </tr>
                </thead>
                <tbody>
                    <% transactions.forEach((transaction, index) => { %>
                        <tr>
                            <th scope="row"><%= transaction.ID %></th>
                            <td><%= transaction.description %></td>
                            <td><%= transaction.merchant %></td>
                            <th scope="row"><%= transaction.amount%></th>
                            <th scope="row"><%= transaction.catehory%></th>
                            <th scope="row"><%= transaction.userid %></th>
                            <td>
                                <a href="/edit/transaction/<%= transaction.transaction_id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/transaction/<%= transaction.transaction_id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No Transactions found. Go <a href="/add/transaction" >here</a> to add Transaction.</p>
        <% } %>
    </div>
</div>
</body>
</html>
